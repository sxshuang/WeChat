@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container {
  margin: 0 auto 20rpx;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  /* 这三行，如果把盒子设置成一个flex弹性模型，则vertical-align: middle;属性不管用
  这里是第二种方法：设置下边 .more 属性的 */
  /* display: flex;
  flex-direction: row;
  justify-content: space-between; */
}

.slogan {
  font-size: 24rpx;
}

.more {
  float: right;
}

.more-text {
  vertical-align: middle;
  margin-right: 5rpx;
  color: #1f4ba5;
}

.more-img {
  width: 20rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container {
  display: flex;
  flex-direction: row;
}
